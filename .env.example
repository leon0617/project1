# ============================================
# Project1 Environment Configuration Template
# ============================================
# Copy this file to .env and adjust values as needed
# cp .env.example .env

# ============================================
# Application Settings
# ============================================
APP_NAME=Project1 API
DEBUG=false
APP_VERSION=0.1.0

# ============================================
# Database Configuration
# ============================================
# Database type: "sqlite" for development, "postgres" for production
DATABASE_TYPE=postgres

# SQLite settings (for local development)
SQLITE_DB_PATH=./app.db

# PostgreSQL settings (for docker-compose and production)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=project1
POSTGRES_PASSWORD=project1_password
POSTGRES_DB=project1_db

# Or use a complete DATABASE_URL (overrides individual settings)
# DATABASE_URL=postgresql://user:password@host:port/database

# ============================================
# Scheduler Settings
# ============================================
# Enable APScheduler for background tasks
SCHEDULER_ENABLED=false
SCHEDULER_TIMEZONE=UTC

# Example: Debug session limits (custom configuration)
DEBUG_SESSION_LIMIT=100

# ============================================
# Playwright Settings
# ============================================
# Browser type: chromium, firefox, webkit
PLAYWRIGHT_BROWSER=chromium
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_EXECUTABLE_PATH=

# ============================================
# Redis Settings (Optional)
# ============================================
# Uncomment to use Redis for caching
# REDIS_HOST=redis
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# ============================================
# Logging Configuration
# ============================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================
# Service Ports (Docker Compose)
# ============================================
BACKEND_PORT=8000
FRONTEND_PORT=3000

# ============================================
# Data Seeding
# ============================================
# Set to "true" to seed sample websites on startup
SEED_SAMPLE_DATA=false

# ============================================
# Security Settings (Production)
# ============================================
# Uncomment and set for production deployments
# SECRET_KEY=your-secret-key-here
# ALLOWED_HOSTS=localhost,example.com
# CORS_ORIGINS=https://example.com,https://www.example.com

# ============================================
# Development Settings
# ============================================
# Enable hot reload and debug features in development
# DEV_MODE=true
# AUTO_RELOAD=true
